:NONAME  CR 1 (BYE) ; 1 CELLS !

1 parse The above exits on a compile error so I can run make from my editor
2drop

include src/core.f
include src/extras.f

include lib/core-ext.f
include lib/string.f
include lib/path.f
include lib/module.f
include lib/see.f

\ Process command-line arguments
: doargs
    1 begin dup argc < while
        dup>r argv
        over c@ '-' = if  1 /string
            over c@ 'e' = if
                r> 1+ dup>r argc < if r@ argv evaluate then
            then
            2drop
        else
            included
        then
        r> 1+
    repeat drop ;

:NONAME
    SOURCE-STACK 'IN !
    doargs
    TAG COUNT TYPE QUIT ;
0 ! ( cold )

' quit 1 cells !

save forth.inc
save-image forth.img
bye
